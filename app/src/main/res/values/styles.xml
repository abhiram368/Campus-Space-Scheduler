<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="AdminActionCard" parent="Widget.MaterialComponents.CardView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">140dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="cardCornerRadius">16dp</item>
    <item name="cardElevation">2dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
</style>

<style name="AdminActionContent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">16dp</item>
</style>

<style name="AdminActionIcon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginBottom">12dp</item>
    <item name="android:tint">#555555</item>
</style>

<style name="AdminActionText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#333333</item>
    <item name="android:gravity">center</item>
</style>
</resources>